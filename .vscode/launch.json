// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [		
		{
			// debugging of Chrome-bound code - https://github.com/Microsoft/vscode-chrome-debug
			"type": "chrome",
			"request": "launch",
			"trace": true,
			"name": "Chrome",
			"url": "http://localhost:3000",
			"pathMapping": {
				"/samples/": "${workspaceFolder}/projects/todomvc/examples/vanilla-es6/src/dbgs/samples/",
				"/bundle.js": "${workspaceFolder}/projects/todomvc/examples/vanilla-es6/dist/bundle.js",
				"/": "${workspaceFolder}/projects/todomvc/examples/vanilla-es6/www",
			},
			"sourceMapPathOverrides": {
				"webpack:///./~/*": "${workspaceFolder}/projects/todomvc/examples/vanilla-es6/node_modules/*",
				"webpack:///./*": "${workspaceFolder}/projects/todomvc/examples/vanilla-es6/*"
			},
			"showAsyncStacks": true
		},
		{
			"type": "node",
			"request": "launch",
			"name": "vscode-jest-tests",
			"program": "${workspaceRoot}/projects/todomvc/examples/vanilla-es6/node_modules/jest/bin/jest.js",
			"cwd": "${workspaceRoot}/projects/todomvc/examples/vanilla-es6",
			"args": [
				"--i",
				"--config",
				"jest.config.js"
			]
		}
	]
}